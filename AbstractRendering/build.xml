<project name="AbstractRendering" default="jar" basedir=".">

  <target name="jar" depends="clean,compile,package" />

  <target name="clean">
    <delete dir="bin"/>
    <delete file="AR.jar"/>
  </target>

  <target name="compile">
    <mkdir dir="bin"/>
    <javac destdir="bin" includeantruntime="false" source="1.7">
      <src>
        <pathelement path="src"/>
      </src>
    </javac>
  </target>

  <target name="package">
    <jar jarfile="AR.jar" includes="*.class" basedir=".">
      <fileset dir="bin"/>
      <manifest>
        <attribute name="Created-By" value=""/>
        <attribute name="Main-Class" value="ar.app.ARApp"/>
      </manifest>
    </jar>
  </target>
	
  <target name="doc">
     <javadoc sourcepath="src" destdir="doc"/>
  </target>
	

</project>
